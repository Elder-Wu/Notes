<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/multi_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="59:"
        android:textSize="18dp" />

    <com.wuzhanglao.niubi.widget.TimerView
        android:id="@+id/timer_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp" />

    <com.wuzhanglao.niubi.widget.HorizontalProgressView
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        app:backgroundProgressType="round"
        app:foregroundProgressType="round"
        app:maxProgress="100"
        app:progress="20" />


    <com.wuzhanglao.niubi.widget.RippleView
        android:id="@+id/ripple_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="40dp" />

    <Button
        android:id="@+id/start_add_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始添加联系人"
        android:visibility="gone" />

    <Button
        android:id="@+id/start_temp_qq_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启临时会话" />
</LinearLayout>